 
 # Custom button
<CustButton@Button>:
    font_size: 80
      
# Define id so I can refer to the SteveHundredsLayout
# class functions
# Display points to the entry widget
<SteveHundredsLayout>:
    id: SteveHundreds
    display: entry
    defaulttext: entry.text
    rows: 5
    padding: 10
    spacing: 10
 
    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            text: root.defaulttext
            font_size: 32
            multiline: False
            width: 80
 
    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            id: 1
            on_press:
                SteveHundreds.onClick(self)
                entry.text += self.text
                        
