 
# Custom button
<CustButton@Button>:
    font_size: 32
 
# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<SteveHundredsLayout>:
    id: SteveHundreds
    display: entry
    rows: 5
    padding: 10
    spacing: 10
 
    # Where input is displayed
    BoxLayout:
        TextInput:
            id: entry
            text: 'Select two numbers'
            font_size: 32
            multiline: False
 
    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press:
                print(entry.text)
                entry.text += self.text
        CustButton:
            text: "2"
            on_press: entry.text += self.text
        CustButton:
            text: "3"
            on_press: entry.text += self.text
